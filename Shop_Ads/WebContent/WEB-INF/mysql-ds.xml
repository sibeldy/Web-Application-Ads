<datasources>
	<datasource jndi-name="java:/shopPool" pool-name="asds-pool"
		enabled="true" use-ccm="false">
		<connection-url>jdbc:mysql://localhost/shop</connection-url>
		<driver>mysql</driver>
		<pool>
			<min-pool-size>2</min-pool-size>
			<max-pool-size>10</max-pool-size>
			<prefill>true</prefill>
		</pool>
		<security>
			<user-name>root</user-name>
			<password>1234</password>
		</security>
	</datasource>
</datasources>